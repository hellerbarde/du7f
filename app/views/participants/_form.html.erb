<% content_for :head do %>
  <%# colors for options %>
  <style type="text/css">
    /*<![CDATA[*/
    <% @poll.options.each do |option_key, option| %>
      <%= "td.option-#{option_key} { background-color: #{option[1]}; }" %>
    <% end %>
    /*]]>*/
  </style>
<% end %>
<p>
  <b>Author:</b>
  <%=h @poll.author %>
</p>

<p>
  <b>Title:</b>
  <%=h @poll.title %>
</p>

<p>
  <b>Created at:</b>
  <%=h @poll.created_at %>
</p>

<p>
  <b>Description:</b>
</p>
<%= simple_format(h @poll.description) %>

<% form_for @participant, :url => form_url do |f| %>
  <%= f.error_messages %>
  <%=
    # prepare radio buttons and print mapping to choice_ids
    # can't do this inline, fields_for has to be the outer loop
    radio_buttons = []
    choice_mappings = ''
    f.fields_for :entries do |ef|
      b = @poll.options.map do |option_key, _|
        [ option_key, ef.radio_button(:answer, option_key) ]
      end
      radio_buttons << Hash[b]
      choice_mappings << ef.hidden_field(:choice_id) + "\n"
    end
    choice_mappings
  %>

  <table id="poll">

    <%# table header %>
    <tr>
      <th class="name">Name</th>
      <% @poll.choices.each do |choice| %>
        <th class="choice"><%=h choice.title %></th>
      <% end %>
    </tr>

    <% @participants.each_with_index do |participant, p_i| %>
      <% unless participant == @participant %>

        <%# show participants %>
        <tr>
          <td class="name"><%=h participant.name %></td>
          <%# TODO: handle event, when there are gaps %>
          <% participant.entries.each do |entry| %>
            <td class="answer option-<%= entry.answer %>"><%=h @poll.options[entry.answer][0] %></td>
          <% end %>
          <td class="action">
            <%= link_to 'Edit', edit_participant_path(@poll, participant) %>
            <%= link_to 'Destroy', destroy_participant_path(@poll, participant) %>
          </td>
        </tr>

      <% else %>

        <% if p_i != 0 %>
          <tr class="empty"><td></td><td colspan="<%= @poll.choices.count %>"></td><td></td></tr>
        <% end %>

        <%# edit participant %>
        <% @poll.options.each_with_index do |option, i| %>
          <% option_key = option[0]; option_name = option[1][0] %>
          <tr>
            <% if i == 0 %>
              <td rowspan="<%=h @poll.options.count %>" class="name">
                <%= f.text_field :name %><br />
                <%= f.submit %>
                <% unless participant.new_record? %>
                  <%= link_to 'Cancel', participants_path %>
                  <%= link_to 'Destroy', destroy_participant_path %>
                <% end %>
              </td>
            <% end %>
            <% radio_buttons.each do |button| %>
              <td class="choice option-<%= option_key %>"><%= button[option_key] %></td>
            <% end %>
            <td class="option"><%=h option_name %></td>
          </tr>
        <% end %>

        <% if p_i != @participants.count - 1 %>
          <tr class="empty"><td></td><td colspan="<%= @poll.choices.count %>"></td><td></td></tr>
        <% end %>

      <% end %>
    <% end %>

    <tr class="empty"><td></td><td colspan="<%= @poll.choices.count %>"></td><td></td></tr>

    <%# show results %>
    <% @poll.options.each do |option_key, option| %>
      <tr>
        <td class="empty"></td>
        <% @poll.choices.each do |choice| %>
          <td class="total option-<%= option_key %>"><%=h choice.count_answers(option_key) %></td>
        <% end %>
        <td class="option">Total <%=h option[0]%></td>
      </tr>
    <% end %>

  </table>

<% end %>
