<html>
<head>
  <title><%=
    if @title && !@title.blank?
      "#{h @title} - "
    end
  %>du7f - just simple polls</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= yield :head %>
</head>
<body>
  <h1><%= link_to polls_path do %>du<span title="ASCII 0x7f: DEL">7f</span><% end %></h1>

<% if flash[:notice] %><p style="color: green"><%= flash[:notice] %></p><% end %>
<% if flash[:error] %><p style="color: red"><%= flash[:error] %></p><% end %>

<%= yield %>

