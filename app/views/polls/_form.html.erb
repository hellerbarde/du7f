<p>
  <%= f.label :author, "Your name" %><br />
  <%= f.text_field :author %>
</p>
<p>
  <%= f.label :admin_email_address, "Your email address (optional)" %><br />
  <%= f.text_field :admin_email_address %>
</p>
<p>
  <%= f.label :title %><br />
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :description %><br />
  <%= f.text_area :description %>
</p>
<% if @poll.new_record? %>
  <%= f.label :poll_type %><br />
  <%= f.select :poll_type, Poll::POLL_TYPES.map{ |k, v| [ v[:name], k ] } %>
<% end %>
<p>
  <%= f.check_box :comments_allowed %>
  <%= f.label :comments_allowed %>
</p>

<h2>Choices</h2>
<% f.fields_for :choices do |cf| %>
  <p>
    <%= cf.label :title %>
    <%= cf.text_field :title %>
  </p>
<% end %>
<% if @poll.new_record? %>
  <%= submit_tag 'Add Choice' %>
<% end %>
